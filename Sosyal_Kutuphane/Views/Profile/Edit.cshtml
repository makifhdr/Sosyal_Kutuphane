@model Sosyal_Kutuphane.Models.User
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <div class="card shadow p-4">

        <h2>Edit Your Profile</h2>

        <form method="post" enctype="multipart/form-data">

            <div class="row">

                <div class="col-md-3 text-center">
                    @{
                        string avatar = Model.Avatar != null
                            ? $"data:image/png;base64,{Convert.ToBase64String(Model.Avatar)}"
                            : "/default-avatar.jpg";
                    }
                    <img src="@avatar"
                         class="rounded-circle border"
                         width="140" height="140"
                         style="object-fit: cover;" 
                         alt="Image couldn't be displayed"/>
                    
                    <label class="form-label">Change your avatar</label>

                    <div class="mt-3">
                        <input type="file" class="form-control" name="avatar" />
                    </div>
                </div>

                <div class="col-md-9">

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" name="username"
                               value="@Model.UserName" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Bio</label>
                        <textarea class="form-control" name="bio"
                                  rows="4">@Model.Bio</textarea>
                    </div>

                    <button class="btn btn-success">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>

            </div>

        </form>

    </div>
</div>