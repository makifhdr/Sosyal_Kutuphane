@using Sosyal_Kutuphane.Services
@model List<Sosyal_Kutuphane.Models.UserMedia>

@if (Model.Count == 0)
{
    <p class="text-muted">No items in this list.</p>
}
else
{
    <div class="row">
            
            @inject GoogleBooksService gbooks;
            @inject TmdbService tmdb;

            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-3">
                    <div class="card">

                        <div class="card-body">
                            @{
                                switch (item.MediaType)
                                {
                                    case "movie":
                                    {
                                        var itemName = await tmdb.GetMovieTitle(item.MediaId);
                                        <p class="card-text">@itemName</p>
                                        break;
                                    }
                                    case "book":
                                    {
                                        var itemName = await gbooks.GetBookTitle(item.MediaId);
                                        <p class="card-text">@itemName</p>
                                        break;
                                    }
                                }
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
}