<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Social Library</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sosyal_Kutuphane.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Social Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Search" asp-action="Index">Search</a>
                        </li>
                    </ul>
                    
                    @using Sosyal_Kutuphane.Data
                    @inject ApplicationDbContext _db
                    @{
                        var userId = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
                        var user = _db.Users.FirstOrDefault(u => u.Id.ToString() == userId);
                        
                        string avatarBase64 = user?.Avatar != null
                            ? $"data:image/png;base64,{Convert.ToBase64String(user.Avatar)}"
                            : "/avatars/default.png";
                    }
                    <img src="@avatarBase64"
                         class="rounded-circle"
                         width="35" height="35"
                         style="object-fit: cover;" />
                    
                    @using System.Security.Claims
                    @{
                        var loggedInUserId = User.FindFirst("UserId")?.Value;
                        var loggedInUserName = User.Identity?.Name;
                    }
                    <li class="nav-item" style="list-style: none">
                        <a class="btn btn-outline-primary rounded-pill px-3"
                           asp-controller="Profile"
                           asp-action="Index"
                           asp-route-id="@loggedInUserId">
                            <i class="bi bi-person-circle"></i> @loggedInUserName
                        </a>
                    </li>

                    <li class="nav-item" style="list-style: none">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button class="btn btn-outline-danger ms-3">Logout</button>
                        </form>
                    </li>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Social Library
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
